# Backend service environment example

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=surveys_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Async database URL for SQLAlchemy
